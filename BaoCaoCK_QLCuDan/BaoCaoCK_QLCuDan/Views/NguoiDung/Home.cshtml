@model BaoCaoCK_QLCuDan.Models.CuDan
@{
    ViewBag.Title = "Home";
}

<h2>Thông tin cư dân</h2>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

@if (Model != null)
{
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-user"></i> Thông tin cá nhân</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <strong><i class="fas fa-id-card"></i> Mã cư dân:</strong>
                    <p class="mb-0">@Model.MaCuDan</p>
                </div>
                <div class="col-md-6 mb-3">
                    <strong><i class="fas fa-user"></i> Họ và tên:</strong>
                    <p class="mb-0">@(Model.HoTen ?? "Chưa có thông tin")</p>
                </div>
                <div class="col-md-6 mb-3">
                    <strong><i class="fas fa-birthday-cake"></i> Ngày sinh:</strong>
                    <p class="mb-0">@(Model.NgaySinh?.ToString("dd/MM/yyyy") ?? "Chưa có thông tin")</p>
                </div>
                <div class="col-md-6 mb-3">
                    <strong><i class="fas fa-venus-mars"></i> Giới tính:</strong>
                    <p class="mb-0">@(Model.GioiTinh ?? "Chưa có thông tin")</p>
                </div>
                <div class="col-md-6 mb-3">
                    <strong><i class="fas fa-phone"></i> Số điện thoại:</strong>
                    <p class="mb-0">@(Model.SDT ?? "Chưa có thông tin")</p>
                </div>
                <div class="col-md-6 mb-3">
                    <strong><i class="fas fa-envelope"></i> Email:</strong>
                    <p class="mb-0">@(Model.Email ?? "Chưa có thông tin")</p>
                </div>
                <div class="col-md-6 mb-3">
                    <strong><i class="fas fa-graduation-cap"></i> Trình độ học vấn:</strong>
                    <p class="mb-0">@(Model.TrinhDoHocVan ?? "Chưa có thông tin")</p>
                </div>
                <div class="col-md-6 mb-3">
                    <strong><i class="fas fa-home"></i> Quan hệ với chủ hộ:</strong>
                    <p class="mb-0">@(Model.QuanHeVoiChuHo ?? "Chưa có thông tin")</p>
                </div>
                <div class="col-md-6 mb-3">
                    <strong><i class="fas fa-id-badge"></i> Học hàm/Học vị:</strong>
                    <p class="mb-0">@(Model.HocHamHocVi ?? "Chưa có thông tin")</p>
                </div>
                <div class="col-md-6 mb-3">
                    <strong><i class="fas fa-calendar"></i> Ngày vào Đảng:</strong>
                    <p class="mb-0">@(Model.NgayVaoDang?.ToString("dd/MM/yyyy") ?? "Chưa có thông tin")</p>
                </div>
                <div class="col-md-6 mb-3">
                    <strong><i class="fas fa-calendar-alt"></i> Ngày vào Đoàn:</strong>
                    <p class="mb-0">@(Model.NgayVaoDoan?.ToString("dd/MM/yyyy") ?? "Chưa có thông tin")</p>
                </div>
                <div class="col-md-6 mb-3">
                    <strong><i class="fas fa-ruler-vertical"></i> Nhận dạng - Chiều cao:</strong>
                    <p class="mb-0">@(Model.NhanDang_Cao ?? "Chưa có thông tin")</p>
                </div>
                <div class="col-md-6 mb-3">
                    <strong><i class="fas fa-face"></i> Nhận dạng - Sống mũi:</strong>
                    <p class="mb-0">@(Model.NhanDang_SongMui ?? "Chưa có thông tin")</p>
                </div>
                <div class="col-md-12 mb-3">
                    <strong><i class="fas fa-info-circle"></i> Dấu vết đặc biệt:</strong>
                    <p class="mb-0">@(Model.DauVetDacBiet ?? "Chưa có thông tin")</p>
                </div>
                <div class="col-md-6 mb-3">
                    <strong><i class="fas fa-building"></i> Mã hộ:</strong>
                    <p class="mb-0">@(Model.MaHo?.ToString() ?? "Chưa có thông tin")</p>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .card {
        border: none;
        border-radius: 10px;
    }
    
    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
    
    .card-body p {
        color: #495057;
        padding: 5px 0;
    }
    
    .card-body strong {
        color: #343a40;
        display: block;
        margin-bottom: 5px;
    }
</style>
