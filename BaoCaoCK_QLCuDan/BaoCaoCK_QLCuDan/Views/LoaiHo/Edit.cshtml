@model BaoCaoCK_QLCuDan.Models.LoaiHo

@{
    ViewBag.Title = "Sửa Loại Hộ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow">
    <div class="card-header bg-white border-0">
        <h3 class="mb-0">Chỉnh sửa Loại Hộ: @Model.TenLoai</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                @using (Html.BeginForm("Edit", "LoaiHo", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(model => model.MaLoaiHo)

                    <div class="form-group">
                        <label class="control-label font-weight-bold">Tên Loại Hộ</label>

                        @Html.TextBoxFor(model => model.TenLoai, new { @class = "form-control", required = "required" })

                        @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Lưu thay đổi
                        </button>

                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>