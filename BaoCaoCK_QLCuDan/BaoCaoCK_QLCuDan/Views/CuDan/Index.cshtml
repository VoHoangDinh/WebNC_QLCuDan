@using PagedList.Mvc
@using PagedList
@model IPagedList<BaoCaoCK_QLCuDan.Models.CuDan>

@{
    ViewBag.Title = "Danh sách cư dân";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
    <style>
        /* CSS tùy chỉnh lại cho đẹp với Bootstrap 4 */
        .pagination-container ul {
            list-style: none;
            padding: 0;
            display: flex;
        }

        .pagination-container li {
            margin-right: 5px;
        }

        .pagination-container a {
            text-decoration: none;
            padding: 5px 10px;
            border: 1px solid #ddd;
            color: #333;
            border-radius: 3px;
        }

        .pagination-container .active a {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }
    </style>
}

@if (Model == null)
{
    <div class="alert alert-danger">
        <strong>Lỗi:</strong> Không lấy được dữ liệu từ API.
        <br />
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </div>
}
else if (!Model.Any())
{
    <div class="alert alert-warning">
        <strong>Thông báo:</strong> Không tìm thấy dữ liệu nào phù hợp.
    </div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary text-uppercase mb-3">Danh sách cư dân</h6>

        <div class="d-flex justify-content-between align-items-center">

            @using (Html.BeginForm("Index", "CuDan", FormMethod.Get, new { @class = "form-inline" }))
            {
                <div class="input-group">
                    <input type="text" name="keyword" value="@ViewBag.CurrentFilter" class="form-control bg-light border-0 small" placeholder="Tìm tên, SĐT, Email..." aria-label="Search">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search fa-sm"></i> Tìm kiếm
                        </button>
                    </div>
                </div>
            }

            <a href="/CuDan/Create" class="btn btn-success btn-sm">
                <i class="fas fa-plus"></i> Thêm mới
            </a>
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th class="text-center">Avatar</th>
                        <th>Họ tên</th>
                        <th>Giới tính</th>
                        <th>SĐT</th>
                        <th>Email</th>
                        <th>Trình độ</th>
                        <th style="width: 150px;" class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    <img src="@(string.IsNullOrEmpty(item.Avatar) ? "/Content/Images/default.jpg" : item.Avatar)"
                                         style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover; border: 1px solid #ddd;" />
                                </td>
                                <td class="font-weight-bold">@item.HoTen</td>
                                <td>@item.GioiTinh</td>
                                <td>@item.SDT</td>
                                <td>@item.Email</td>
                                <td>@item.TrinhDoHocVan</td>
                                <td class="text-center">
                                    <a href="/CuDan/Details/@item.MaCuDan" class="btn btn-info btn-sm" title="Xem">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/CuDan/Edit/@item.MaCuDan" class="btn btn-warning btn-sm" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/CuDan/DeleteConfirmed/@item.MaCuDan"
                                       class="btn btn-danger btn-sm"
                                       title="Xóa"
                                       onclick="return confirm('Bạn có chắc chắn muốn xóa cư dân [@item.HoTen] không?');">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        @if (Model != null && Model.PageCount > 1)
        {
            <div class="row mt-3 border-top pt-3">
                <div class="col-md-6 align-self-center">
                    Hiển thị trang <strong>@(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)</strong> trên tổng số <strong>@Model.PageCount</strong> trang.
                </div>
                <div class="col-md-6">
                    <div class="float-right pagination-container">
                        @Html.PagedListPager(Model, page => Url.Action("Index",
                            new { page, keyword = ViewBag.CurrentFilter }))
                    </div>
                </div>
            </div>
        }
    </div>
</div>