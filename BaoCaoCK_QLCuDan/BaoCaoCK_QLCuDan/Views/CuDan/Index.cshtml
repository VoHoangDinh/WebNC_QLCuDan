@model IEnumerable<BaoCaoCK_QLCuDan.Models.CuDan>

@{
    ViewBag.Title = "Danh sách cư dân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model == null)
{
    <div class="alert alert-danger">Model đang bị NULL (Controller chưa trả về List)</div>
}
else if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        Model có 0 dòng (Kết nối API thành công nhưng chưa có dữ liệu hoặc API trả về rỗng).
        <br />
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </div>
}
else
{
    <div class="alert alert-success">Đã lấy được @Model.Count() cư dân!</div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary text-uppercase">Danh sách cư dân</h6>
        <a href="/CuDan/Create" class="btn btn-success btn-sm"><i class="fas fa-plus"></i> Thêm mới</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Avatar</th>
                        <th>Họ tên</th>
                        <th>Giới tính</th>
                        <th>SĐT</th>
                        <th>Email</th>
                        <th>Trình độ</th>
                        <th style="width: 150px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <img src="@(string.IsNullOrEmpty(item.Avatar) ? "/Content/Images/default.jpg" : item.Avatar)"
                                     style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;" />
                            </td>
                            <td class="font-weight-bold">@item.HoTen</td>
                            <td>@item.GioiTinh</td>
                            <td>@item.SDT</td>
                            <td>@item.Email</td>
                            <td>@item.TrinhDoHocVan</td>
                            <td>
                                <a href="/CuDan/Details/@item.MaCuDan" class="btn btn-info btn-sm" title="Xem">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="/CuDan/Edit/@item.MaCuDan" class="btn btn-warning btn-sm" title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/CuDan/DeleteConfirmed/@item.MaCuDan"
                                   class="btn btn-danger btn-sm"
                                   title="Xóa"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa cư dân này không?');">
                                    <i class="fas fa-trash"></i>
                               
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>