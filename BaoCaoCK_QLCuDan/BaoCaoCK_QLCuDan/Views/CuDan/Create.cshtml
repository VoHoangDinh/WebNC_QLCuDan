@model BaoCaoCK_QLCuDan.Models.CuDan

@{
    ViewBag.Title = "Thêm mới cư dân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-success shadow">
    <div class="card-header bg-success text-white">
        <h3 class="card-title mb-0">Thêm mới cư dân</h3>
    </div>

    @using (Html.BeginForm("Create", "CuDan", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-md-6 border-right">
                    <h5 class="text-success border-bottom pb-2">I. Thông tin chung</h5>

                    <div class="form-group">
                        <label>Chọn Hộ gia đình (*)</label>
                        @Html.DropDownList("MaHo", null, htmlAttributes: new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Họ và tên (*)</label>
                        @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập họ tên..." } })
                        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Ngày sinh</label>
                                @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Giới tính</label>
                                <select class="form-control" name="GioiTinh">
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Số điện thoại</label>
                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        <label>Ảnh đại diện</label>
                        <input type="file" name="ImageFile" class="form-control-file border p-1" />
                    </div>
                </div>

                <div class="col-md-6">
                    <h5 class="text-success border-bottom pb-2">II. Trình độ & Đặc điểm</h5>

                    <div class="form-group">
                        <label>Trình độ học vấn</label>
                        @Html.EditorFor(model => model.TrinhDoHocVan, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Ngày vào Đảng</label>
                                @Html.EditorFor(model => model.NgayVaoDang, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Ngày vào Đoàn</label>
                                @Html.EditorFor(model => model.NgayVaoDoan, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Nhận dạng (Cao)</label>
                                @Html.EditorFor(model => model.NhanDang_Cao, new { htmlAttributes = new { @class = "form-control", placeholder = "VD: 1m70" } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Sống mũi</label>
                                @Html.EditorFor(model => model.NhanDang_SongMui, new { htmlAttributes = new { @class = "form-control", placeholder = "VD: Thẳng" } })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Dấu vết đặc biệt</label>
                        @Html.EditorFor(model => model.DauVetDacBiet, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer text-right">
            <a href="/CuDan/Index" class="btn btn-secondary">Hủy bỏ</a>
            <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Lưu dữ liệu</button>
        </div>
    }
</div>