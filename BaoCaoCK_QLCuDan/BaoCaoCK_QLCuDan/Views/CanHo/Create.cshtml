@model BaoCaoCK_QLCuDan.Models.CanHo

@{
    ViewBag.Title = "Thêm căn hộ mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-primary shadow">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title mb-0">Thêm mới Căn hộ</h3>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label>Tòa nhà (*)</label>
                @Html.DropDownList("MaToaNha", null, "--- Chọn Tòa Nhà ---", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaToaNha, "", new { @class = "text-danger" })
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Số phòng (*)</label>
                        @Html.EditorFor(model => model.SoPhong, new { htmlAttributes = new { @class = "form-control", placeholder = "Ví dụ: A101" } })
                        @Html.ValidationMessageFor(model => model.SoPhong, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tầng</label>
                        @Html.EditorFor(model => model.Tang, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Diện tích (m2)</label>
                        @Html.EditorFor(model => model.DienTich, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Trạng thái</label>
                        <select name="TrangThai" class="form-control">
                            <option value="Trống">Trống</option>
                            <option value="Đã bàn giao">Đã bàn giao</option>
                            <option value="Đang sửa chữa">Đang sửa chữa</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer text-right">
            <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
            <button type="submit" class="btn btn-success">Lưu dữ liệu</button>
        </div>
    }
</div>