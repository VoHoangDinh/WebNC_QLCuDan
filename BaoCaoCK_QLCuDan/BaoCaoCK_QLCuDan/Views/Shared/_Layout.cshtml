<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quản lý dân cư</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <style>
        /* CSS Sidebar giống ảnh */
        body {
            font-family: 'Source Sans Pro', sans-serif;
            background-color: #f4f6f9;
        }

        .wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
        }

        .sidebar {
            min-width: 250px;
            max-width: 250px;
            background: #343a40;
            color: #fff;
            min-height: 100vh;
            transition: all 0.3s;
        }

        .sidebar-header {
            padding: 15px;
            background: #343a40;
            border-bottom: 1px solid #4b545c;
        }

            .sidebar-header h3 {
                font-size: 1.2rem;
                margin: 0;
            }

        .user-panel {
            padding: 15px;
            border-bottom: 1px solid #4b545c;
            display: flex;
            align-items: center;
        }

            .user-panel img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                margin-right: 10px;
            }

        .components {
            padding: 0;
            border-bottom: 1px solid #47748b;
        }

            .components a {
                padding: 12px 15px;
                font-size: 1.1em;
                display: block;
                color: #c2c7d0;
                text-decoration: none;
            }

                .components a:hover {
                    color: #fff;
                    background: #494e53;
                }

                .components a.active {
                    background: #007bff;
                    color: #fff;
                    border-left: 4px solid #0056b3;
                }

            .components i {
                margin-right: 10px;
                width: 20px;
                text-align: center;
            }

        .content {
            width: 100%;
            padding: 20px;
            min-height: 100vh;
            transition: all 0.3s;
        }
    </style>
</head>
<body>
    @{
        // Lấy thông tin từ Session
        var userRole = Session["UserRole"] as string ?? "Guest";
        var userName = Session["UserName"] as string ?? "Khách";
        var userAvatar = Session["UserAvatar"] as string ?? "/Content/Images/default.jpg";

        // Hàm helper để active menu
        string IsActive(string controller, string action)
        {
            var curCtrl = ViewContext.RouteData.Values["controller"]?.ToString();
            var curAct = ViewContext.RouteData.Values["action"]?.ToString();
            return (curCtrl == controller && curAct == action) ? "active" : "";
        }
    }

    <div class="wrapper">
        <nav class="sidebar">
            <div class="sidebar-header">
                <h3><i class="fas fa-building"></i> Quản lý cư dân</h3>
            </div>

            <div class="user-panel">
                <img src="@userAvatar" alt="User Image">
                <div class="info">
                    <div class="d-block font-weight-bold">@userName</div>
                    <small><i class="fas fa-circle text-success" style="font-size: 10px;"></i> @userRole</small>
                </div>
            </div>

            <div class="components">
                @if (userRole == "Admin")
                {
                    /* --- MENU DÀNH CHO ADMIN --- */
                    <a href="@Url.Action("Index", "Admin")" class="@IsActive("Admin", "Index")">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a href="@Url.Action("Index", "HoGiaDinh")" class="@IsActive("HoGiaDinh", "Index")">
                        <i class="fas fa-users"></i> Quản lý hộ gia đình
                    </a>
                    <a href="@Url.Action("Index", "CuDan")" class="@IsActive("CuDan", "Index")">
                        <i class="fas fa-user"></i> Quản lý cư dân
                    </a>
                    /* Thêm các menu Admin khác ở đây */
                }
                else
                {
                    /* --- MENU DÀNH CHO CƯ DÂN (Giống ảnh) --- */
                    <a href="@Url.Action("MyProfile", "CuDan")" class="@IsActive("CuDan", "MyProfile")">
                        <i class="fas fa-id-card"></i> Thông tin cư dân
                    </a>
                    <a href="@Url.Action("TimKiemCuDan", "CuDan")" class="@IsActive("CuDan", "TimKiemCuDan")">
                        <i class="fas fa-search"></i> Tìm kiếm cư dân
                    </a>
                    <a href="@Url.Action("ChangePassword", "Account")" class="@IsActive("Account", "ChangePassword")">
                        <i class="fas fa-key"></i> Đổi mật khẩu
                    </a>
                }

                <a href="@Url.Action("Logout", "Account")" class="text-danger mt-3 border-top pt-3">
                    <i class="fas fa-sign-out-alt"></i> Đăng xuất
                </a>
            </div>
        </nav>

        <div class="content">
            @RenderBody()
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>