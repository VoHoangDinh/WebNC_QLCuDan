@model BaoCaoCK_QLCuDan.Models.HoGiaDinh
@{ ViewBag.Title = "Xóa Hộ Gia Đình"; Layout = "~/Views/Shared/_Layout.cshtml"; }

@if (Model == null)
{
    <div class="container-fluid mt-4">
        <div class="alert alert-warning">
            <h4>Không tìm thấy thông tin hộ gia đình</h4>
            <p>Hộ gia đình bạn đang tìm không tồn tại hoặc đã bị xóa.</p>
            <a href="@Url.Action("Index")" class="btn btn-primary">Quay lại danh sách</a>
        </div>
    </div>
}
else
{
    <div class="container-fluid mt-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-danger text-white">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-exclamation-triangle"></i> Xác nhận xóa Hộ Gia Đình
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h5><i class="fas fa-exclamation-triangle"></i> Cảnh báo!</h5>
                    <p>Bạn có chắc chắn muốn xóa hộ gia đình này? Hành động này không thể hoàn tác.</p>
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tr>
                            <th width="200">Mã Hộ:</th>
                            <td>@Model.MaHo</td>
                        </tr>
                        <tr>
                            <th>Tên Chủ Hộ:</th>
                            <td>@(Model.TenChuHo ?? "Chưa có")</td>
                        </tr>
                        <tr>
                            <th>Số Thành Viên:</th>
                            <td>@Model.SoThanhVien</td>
                        </tr>
                        <tr>
                            <th>Căn Hộ:</th>
                            <td>@(Model.MaCanHoNavigation?.SoCanHo ?? "N/A")</td>
                        </tr>
                        <tr>
                            <th>Loại Hộ:</th>
                            <td>@(Model.MaLoaiHoNavigation?.TenLoaiHo ?? "N/A")</td>
                        </tr>
                        <tr>
                            <th>Trạng Thái:</th>
                            <td>@(Model.TrangThai ?? "N/A")</td>
                        </tr>
                    </table>
                </div>

                @using (Html.BeginForm("Delete", "HoGiaDinh", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.MaHo)
                    
                    <div class="mt-4">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa hộ này? Hành động này sẽ xóa tất cả thành viên trong hộ.');">
                            <i class="fas fa-trash"></i> Xác nhận xóa
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Hủy bỏ
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
}

