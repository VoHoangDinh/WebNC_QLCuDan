@model BaoCaoCK_QLCuDan.Models.HoGiaDinh
@{
    ViewBag.Title = "Chi Tiết Hộ Gia Đình";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model == null)
{
    <div class="container-fluid mt-4">
        <div class="alert alert-warning">
            <h4>Không tìm thấy thông tin hộ gia đình</h4>
            <p>Hộ gia đình bạn đang tìm không tồn tại hoặc đã bị xóa.</p>
            <a href="@Url.Action("Index")" class="btn btn-primary">Quay lại danh sách</a>
        </div>
    </div>
}
else
{
<div class="container-fluid mt-4">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-white border-0">
            <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-info-circle"></i> Thông tin Hộ: #@Model.MaHo</h6>
            <div>
                <a href="@Url.Action("Edit", new { id = Model.MaHo })" class="btn btn-sm btn-warning shadow-sm">
                    <i class="fas fa-edit"></i> Chỉnh sửa
                </a>
                <a href="@Url.Action("Index")" class="btn btn-sm btn-secondary shadow-sm">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 border-right">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Chủ Hộ:</dt>
                        <dd class="col-sm-8 font-weight-bold text-dark" style="font-size: 1.1em;">
                            @Model.TenChuHo
                        </dd>

                        <dt class="col-sm-4 text-muted">Trạng Thái:</dt>
                        <dd class="col-sm-8">
                            @if (Model.TrangThai == "Đang ở")
                            {
                                <span class="badge badge-success px-2 py-1">Đang ở</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary px-2 py-1">@Model.TrangThai</span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-muted">Ngày Nhận:</dt>
                        <dd class="col-sm-8">
                            @(Model.NgayNhanNha.HasValue ? Model.NgayNhanNha.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")
                        </dd>
                    </dl>
                </div>

                <div class="col-md-6 pl-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Căn Hộ:</dt>
                        <dd class="col-sm-8 text-primary font-weight-bold" style="font-size: 1.1em;">
                            <i class="fas fa-building"></i> @(Model.CanHo != null ? Model.CanHo.SoPhong : "Chưa gán")
                        </dd>

                        <dt class="col-sm-4 text-muted">Loại Hộ:</dt>
                        <dd class="col-sm-8">
                            @(Model.LoaiHo != null ? Model.LoaiHo.TenLoai : "---")
                        </dd>

                        <dt class="col-sm-4 text-muted">Tổng Thành Viên:</dt>
                        <dd class="col-sm-8 font-weight-bold">
                            @Model.SoThanhVien người
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center bg-light">
            <h6 class="m-0 font-weight-bold text-dark">
                <i class="fas fa-users text-info"></i> Danh sách thành viên
            </h6>
            @if (Model != null && Model.MaHo > 0)
            {
                <a href="@Url.Action("AddMember", new { id = Model.MaHo })" class="btn btn-sm shadow-sm" style="background-color: #ff8c00; border-color: #ff8c00; color: white;">
                    <i class="fas fa-user-plus"></i> Thêm thành viên
                </a>
            }
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-bordered table-hover mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th width="8%" class="text-center">Ảnh</th>
                            <th width="20%">Họ và Tên</th>
                            <th width="15%">Ngày Sinh</th>
                            <th width="10%">Giới Tính</th>
                            <th width="15%">Quan Hệ</th>
                            <th width="20%">Nghề nghiệp / Học vấn</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var members = ViewBag.Members as List<BaoCaoCK_QLCuDan.Models.CuDan>;
                            if (members == null && Model.CuDans != null)
                            {
                                members = Model.CuDans.ToList();
                            }
                            var totalMembers = ViewBag.TotalMembers ?? (Model.CuDans?.Count() ?? 0);
                            var currentPage = ViewBag.CurrentPage ?? 1;
                            var totalPages = ViewBag.TotalPages ?? (totalMembers > 5 ? (int)Math.Ceiling(totalMembers / 5.0) : 1);
                        }
                        @if (members != null && members.Count > 0)
                        {
                            foreach (var item in members)
                            {
                                <tr>
                                    <td class="text-center align-middle">
                                        <img src="@(string.IsNullOrEmpty(item.Avatar) ? "/Content/Images/default.jpg" : item.Avatar)" class="rounded-circle border"
                                             style="width: 45px; height: 45px; object-fit: cover;"
                                             onerror="this.src='/Content/Images/default.jpg'" />
                                    </td>
                                    <td class="align-middle">
                                        <span class="font-weight-bold text-dark">@item.HoTen</span>
                                        @if (item.QuanHeVoiChuHo == "Chủ hộ")
                                        {
                                            <i class="fas fa-star text-warning ml-1" title="Chủ hộ"></i>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        @(item.NgaySinh.HasValue ? item.NgaySinh.Value.ToString("dd/MM/yyyy") : "-")
                                    </td>
                                    <td class="align-middle">@item.GioiTinh</td>
                                    <td class="align-middle">
                                        @if (item.QuanHeVoiChuHo == "Chủ hộ")
                                        {
                                            <span class="badge badge-warning px-2">Chủ hộ</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-info px-2">@(item.QuanHeVoiChuHo ?? "Không rõ")</span>
                                        }
                                    </td>
                                    <td class="align-middle text-muted small">
                                        @(item.TrinhDoHocVan ?? "Không rõ")
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-4 text-muted">
                                    <i class="fas fa-user-slash fa-2x mb-2"></i><br />
                                    Hộ này chưa có thành viên nào.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (totalMembers > 5)
            {
                <div class="card-footer bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="text-muted">Hiển thị @((currentPage - 1) * 5 + 1) - @(Math.Min(currentPage * 5, totalMembers)) trong tổng số @totalMembers thành viên</span>
                        </div>
                        <nav>
                            <ul class="pagination pagination-sm mb-0">
                                @if (currentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Details", new { id = Model.MaHo, page = currentPage - 1 })">Trước</a>
                                    </li>
                                }
                                @for (int i = 1; i <= totalPages; i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Details", new { id = Model.MaHo, page = i })">@i</a>
                                    </li>
                                }
                                @if (currentPage < totalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Details", new { id = Model.MaHo, page = currentPage + 1 })">Sau</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
}