@model IEnumerable<BaoCaoCK_QLCuDan.Models.HoGiaDinh>

@{
    ViewBag.Title = "Quản lý Hộ Gia Đình";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-users text-primary"></i> Quản Lý Hộ Gia Đình
        </h1>
        <a href="@Url.Action("Create")" class="btn btn-sm btn-success shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Thêm Hộ Mới
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-white border-bottom-primary">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách các hộ dân cư</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th class="text-center" width="5%">#ID</th>
                            <th width="20%">Chủ Hộ</th>
                            <th width="10%">Căn Hộ</th>
                            <th width="15%">Loại Hộ</th>
                            <th width="15%">Ngày Nhận</th>
                            <th width="10%">Thành Viên</th>
                            <th width="10%">Trạng Thái</th>
                            <th class="text-center" width="15%">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center align-middle font-weight-bold">@item.MaHo</td>

                                    <td class="align-middle">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm mr-2">
                                                <span class="avatar-title rounded-circle bg-primary text-white p-2">
                                                    <i class="fas fa-user"></i>
                                                </span>
                                            </div>
                                            <div>
                                                <strong>@(item.TenChuHo ?? "Đang cập nhật")</strong>
                                            </div>
                                        </div>
                                    </td>

                                    <td class="align-middle">
                                        <span class="badge badge-info px-2 py-1" style="font-size: 0.9em;">
                                            <i class="fas fa-building"></i> @(item.CanHo != null ? item.CanHo.SoPhong : "N/A")
                                        </span>
                                    </td>

                                    <td class="align-middle">
                                        <span class="text-dark">
                                            @(item.LoaiHo != null ? item.LoaiHo.TenLoai : "Chưa phân loại")
                                        </span>
                                    </td>

                                    <td class="align-middle">
                                        @(item.NgayNhanNha.HasValue ? item.NgayNhanNha.Value.ToString("dd/MM/yyyy") : "-")
                                    </td>

                                    <td class="align-middle text-center">
                                        <span class="badge badge-light border">@item.SoThanhVien người</span>
                                    </td>

                                    <td class="align-middle">
                                        @if (item.TrangThai == "Đang ở")
                                        {
                                            <span class="badge badge-success">Đang ở</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">@item.TrangThai</span>
                                        }
                                    </td>

                                    <td class="text-center align-middle">
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Edit", new { id = item.MaHo })" class="btn btn-sm btn-outline-primary" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Details", new { id = item.MaHo })" class="btn btn-sm btn-outline-info" title="Chi tiết cư dân">
                                                <i class="fas fa-list"></i>
                                            </a>
                                            @using (Html.BeginForm("Delete", "HoGiaDinh", new { id = item.MaHo }, FormMethod.Post, new { style = "display: inline;" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                        onclick="return confirm('Bạn có chắc chắn muốn xóa hộ này?');" 
                                                        title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4 text-muted">
                                    <i class="fas fa-folder-open fa-3x mb-3"></i><br />
                                    Không tìm thấy dữ liệu hộ gia đình nào.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>